# Production .env Configuration

# Application
APP_NAME="SIGMA Frontliner Kiosk"
APP_ENV=production
APP_KEY=  # Generate with: php artisan key:generate
APP_DEBUG=false
APP_URL=https://your-domain.com

# Logging
LOG_CHANNEL=daily
LOG_LEVEL=warning
LOG_DEPRECATIONS_CHANNEL=null

# Database
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=simdes_kiosk
DB_USERNAME=simdes_user
DB_PASSWORD=your_secure_password

# Cache
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# Redis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# CORS (for API access)
CORS_ALLOWED_ORIGINS=https://your-domain.com

# Performance
OCTANE_SERVER=swoole  # Optional: Use Laravel Octane for better performance

# Broadcasting (if needed for real-time updates)
BROADCAST_DRIVER=redis
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_APP_CLUSTER=

# Security
SECURE_HEADERS=true
FORCE_HTTPS=true

# Asset CDN (optional)
ASSET_URL=https://cdn.your-domain.com

# Kiosk Configuration
KIOSK_IDLE_TIMEOUT=60
KIOSK_DEFAULT_LANGUAGE=id
KIOSK_MEMORY_WARNING_THRESHOLD=500

# Monitoring (optional)
SENTRY_LARAVEL_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1
